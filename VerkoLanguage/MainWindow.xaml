<Window x:Class="VerkoLanguage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VerkoLanguage"
        mc:Ignorable="d"
        Title="Лангуаге" Height="450" Width="800" FontFamily="Comic Sans MS" Icon="ress/school_logo.ico" Background="#FFE7FABF">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Image Source="ress/school_logo.png" HorizontalAlignment="Left"></Image>

        <TextBlock Text="Верко Лангуаге" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>

        <Frame Grid.Row="1" Name="MainFrame" NavigationUIVisibility="Hidden" ContentRendered="MainFrame_ContentRendered"/>

        <Button Content="Назад" Name="BtnBack" HorizontalAlignment="Right" Click="BtnBack_Click"></Button>
    </Grid>
</Window>
